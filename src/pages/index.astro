---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import PhotosSummary from '../components/PhotosSummary.astro';
import RecentPosts from '../components/RecentPosts.astro';
import ContactMe from '../components/ContactMe.astro';
import '../styles/main.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col content-center flex-wrap max-w-7xl m-auto w-full dark:bg-slate-800">
		<div class="max-w-full">
			<Header />
			<div class="homepage-photo-summary">
				<PhotosSummary />
			</div>
		</div>
		<RecentPosts />
		<ContactMe />
		<Footer />
	<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-CVVH6DSYJ0"></script>
		<script is:inline>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-CVVH6DSYJ0');
		</script>
	</body>
</html>

<style>
.homepage-photo-summary {
	animation: fadeIn 1s ease-in both;
}
</style>