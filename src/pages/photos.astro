---
import BaseHead from '../components/BaseHead.astro';
import ThinHeader from '../components/ThinHeader.astro';
import PhotosSummary from '../components/PhotosSummary.astro';
import RecentFlotogramme from '../components/RecentFlotogramme.astro';
import Footer from '../components/Footer.astro';
import { SITE_META_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/main.css';
---

<html lang="en">
	<head>
		<BaseHead title={SITE_META_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}

			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body class="flex flex-col content-center flex-wrap max-w-3xl m-auto dark:bg-slate-800">
		<main class="w-full max-w-3xl flex-grow">
			<ThinHeader />
			<h1 class="text-6xl text-center my-10 sm:text-5xl">Photography</h1>
			<p class="dark:text-slate-200">I primarily shoot with the following cameras:</p>
			<p class="italic ml-5 dark:text-slate-400">Ricoh GR III HDF (every day carry)</p>
			<p class="italic ml-5 dark:text-slate-400">iPhone 15 Pro</p>
			<p class="italic ml-5 dark:text-slate-400">Sony Î±7 II</p>
			<p class="dark:text-slate-200">I mostly use Adobe Lightroom CC and Darkroom to edit my photos. Here's a selection:</p>
			<RecentFlotogramme />
			<PhotosSummary />
		</main>
		<Footer />
	</body>
</html>

<style>
	h1 {
		animation: fadeIn .3s ease-in both;
	}
</style>