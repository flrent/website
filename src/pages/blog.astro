---
import BaseHead from '../components/BaseHead.astro';
import ThinHeader from '../components/ThinHeader.astro';
import RecentPosts from '../components/RecentPosts.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/main.css';
---

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}

			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body class="flex flex-col content-center flex-wrap max-w-3xl m-auto dark:bg-slate-800">
		<main class="w-full max-w-3xl flex-grow">
			<ThinHeader />
			<h1 class="text-6xl text-center my-10">Blog</h1>
			<RecentPosts />
		</main>
		<Footer />
	</body>
</html>

<style>
	h1 {
		animation: fadeIn .3s ease-in both;
	}
</style>