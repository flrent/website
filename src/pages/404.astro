---
import BaseHead from '../components/BaseHead.astro';
import ThinHeader from '../components/ThinHeader.astro';
import Footer from '../components/Footer.astro';
import { SITE_META_TITLE, SITE_DESCRIPTION } from '../consts';
import PhotosSummary from '../components/PhotosSummary.astro';
import RecentPosts from '../components/RecentPosts.astro';
import ContactMe from '../components/ContactMe.astro';
import '../styles/main.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_META_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col content-center flex-wrap max-w-7xl m-auto w-full dark:bg-slate-800">
		<div class="max-w-full">
			<ThinHeader />
			<h2 class="text-center">Page not found ☹️ </h2>
		</div>
		<Footer />
	</body>
</html>

<style>
.homepage-photo-summary {
	animation: fadeIn 1s ease-in both;
}
</style>