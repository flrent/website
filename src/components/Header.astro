---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<h1 class="text-5xl text-center">
		{SITE_TITLE}
	</h1>
	<nav>
		<HeaderLink href="/" class="text-xl">Home</HeaderLink>
		<HeaderLink href="/blog" class="text-xl">Blog</HeaderLink>
		<HeaderLink href="/about" class="text-xl">About me</HeaderLink>
		<HeaderLink href="https://twitter.com/flrent" target="_blank" class="text-xl">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/flrent" target="_blank" class="text-xl">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h1 {
		margin: 0.5em 0;
	}
</style>
